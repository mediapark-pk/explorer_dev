{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "paths": {
            "src/*": [
                "./src/*"
            ],
            "@app": [
              "../packages/*"
            ]
        },
    },
    "include": [
        "src/**/*",
        "../packages/common/**/*",
        "../packages/socket-nest/**/*",
        "../packages/socket-types/**/*",
        "../packages/web/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}
