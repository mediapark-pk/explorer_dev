{
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "packages/*": [
        "../*"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "es7",
      "dom",
      "es2017"
    ]
  }
}
